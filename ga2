#задание 1

def print_numbers(n):
    if n > 1:
        print_numbers(n - 1) #если n больше 1, вызываем эту же функцию с аргументом n-1,рекурсивный шаг- переход к меньшему числу 
    print(n)
n = int(input("введите число n: "))
print_numbers(n)


#задание 2

def print_range(a, b):
    if a == b:
        print(a)
    elif a < b:
        print(a)
        print_range(a + 1, b)#если а меньше б, числа выводятся в порядке возрастания
    else:
        print(a)
        print_range(a - 1, b)#если а больше б, числа выводятся в порядке убывания
a = int(input("введите целое число A: "))
b = int(input("введите целое число B: "))
print_range(a, b)#вызываем рекурсивную функцию для вывода чисел


#задание 3

def sum_digits(n):
    if n < 10:
        return n #если число меньше 10, оно состоит из одной цифры
    return n % 10 + sum_digits(n // 10)
# n % 10 - последняя цифра числа, n // 10 - число без последней цифры; складываем последнюю цифру с суммой цифр оставшейся части числа
n = int(input("Введите натуральное число N: "))
print(f"Сумма цифр числа {n} равна: {sum_digits(n)}")


#задание 4

def prime_divisors(n, divisor=2):
    if n == 1:
        return #если число стало равно 1, рекурсия завершается
    if divisor > n:
        return #если текущий делитель больше n, завершаем рекурсию
    if n % divisor == 0: #если n делится на текущий делитель без остатка
        print(divisor) #выводим этот простой делитель
        prime_divisors(n // divisor, divisor)#рекурсивно вызываем функцию для n, разделенного на этот делитель
    else:
        prime_divisors(n, divisor + 1) #если не делится, переходим к следующему делителю

n = int(input("Введите натуральное число больше единицы: "))
prime_divisors(n)
